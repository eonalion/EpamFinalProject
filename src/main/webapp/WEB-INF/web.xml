<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <!--filters order-->
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>VisitorFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CurrentPageFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessFilter</filter-name>
        <url-pattern>/jsp/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserAccessFilter</filter-name>
        <url-pattern>/jsp/user/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GuestAccessFilter</filter-name>
        <url-pattern>/jsp/guest/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CatalogTracksJSPFilter</filter-name>
        <url-pattern>/jsp/user/catalog_tracks.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CatalogAlbumsJSPFilter</filter-name>
        <url-pattern>/jsp/user/catalog_albums.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CatalogArtistsJSPFilter</filter-name>
        <url-pattern>/jsp/user/catalog_artists.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ClientsJSPFilter</filter-name>
        <url-pattern>/jsp/admin/clients.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CreateJSPFilter</filter-name>
        <url-pattern>/jsp/admin/create.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>EditJSPFilter</filter-name>
        <url-pattern>/jsp/admin/edit.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PurchasesJSPFilter</filter-name>
        <url-pattern>/jsp/user/purchases.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>TrackJSPFilter</filter-name>
        <url-pattern>/jsp/user/track.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MainJSPFilter</filter-name>
        <url-pattern>/jsp/user/main.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CommentsJSPFilter</filter-name>
        <url-pattern>/jsp/admin/comments.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ControllerFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <error-page>
        <error-code>400</error-code>
        <location>/jsp/error/400.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/error/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/404.jsp</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>